@set('isActive', request.matchesRoute(active))
@set('classes', 'block rounded-md px-3 py-2 text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white')

@if(isActive)
  @set('classes', 'bg-gray-700 text-white block rounded-md px-3 py-2 text-base font-medium')
@end

<a
  {{
    $props.serializeExcept(['active'], {
      href: route(href),
      class: classes,
      'aria-current': isActive ? 'page' : '',
    }, false)
  }}
>
  {{ name }}
</a>
