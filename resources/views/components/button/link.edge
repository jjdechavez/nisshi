@set('defaultClasses', 'text-indigo-600 font-medium decoration-2 hover:underline rounded text-sm px-5 py-2.5 text-center inline-block cursor-pointer')

@if(classes)
  @set('defaultClasses', defaultClasses + ` ${classes}`)
@end

@if(type === "link")
  <a
    class="{{ defaultClasses }}"
  >
    {{ name }}
  </a>
@end

@if(["button", "submit", "reset"].includes(type))
  <button
    type="{{ type }}"
    class="{{ defaultClasses }}"
  >
    {{ name }}
  </button>
@end
